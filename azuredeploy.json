{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionType": {
            "type": "string",
            "allowedValues": [
                "Dev Test",
                "Pre-Production",
                "Production"
            ],
            "defaultValue": "Dev Test",
            "metadata": {
                "description": "Subscription"
            }
        },
        "tagCostCodeID": {
            "type": "string",
            "maxLength": 256,
            "defaultValue": "D.4534-02-R01",
            "metadata": {
                "description": "Cost Code ID tag"
            }
        },
        "tagServiceOwner": {
            "type": "string",
            "maxLength": 256,
            "defaultValue": "David Blowers",
            "metadata": {
                "description": "Service Owner tag"
            }
        },
        "tagServiceTicketRequestId": {
            "type": "string",
            "maxLength": 256,
            "defaultValue": "CirrusPrj",
            "metadata": {
                "description": "Service Ticket Request ID tag"
            }
        },
        "tagSource": {
            "type": "string",
            "maxLength": 256,
            "defaultValue": "servicenow",
            "metadata": {
                "description": "Source tag"
            }
        },
        "vmNumber": {
            "type": "string",
            "minLength": 3,
            "maxLength": 4,
            "metadata": {
                "description": "Unique VM number (must be 3 digits)"
            }
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Windows Server 2012 Datacenter",
                "Windows Server 2012 R2 Datacenter",
                "Windows Server 2016 Datacenter",
                "SLES SAP 12-SP1",
                "SLES SAP BYOS 12-SP1",
                "SLES SAP 12-SP2",
                "SLES SAP BYOS 12-SP2",
                "SLES SAP 12-SP3",
                "SLES SAP BYOS 12-SP3",
                "RHEL 7.2",
                "RHEL 7.3",
                "Oracle Linux 7.2"
            ],
            "defaultValue": "SLES SAP 12-SP2",
            "metadata": {
                "description": "The type of the operating system you want to deploy."
            }
        },
        "sapSystemSize": {
            "type": "string",
            "allowedValues": [
                "ISU",
                "CRM",
                "PIC",
                "BWA",
                "MOB",
                "EWM",
                "JVA",
                "CEV",
                "PIN",
                "NGW"
            ],
            "defaultValue": "ISU",
            "metadata": {
                "description": "The type of the SAP Virtual Machine you want to deploy"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 12,
            "metadata": {
                "description": "Password for the Virtual Machine"
            }
        },
        "subnetSubscriptionId": {
            "type": "string",
            "maxLength": 36,
            "minLength": 36,
            "defaultValue": "25d7b58f-a2ed-4c46-a3f7-1748a5e0934b",
            "metadata": {
                "description": "The subscription GUID of subnet you want to use, in the format xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
            }
        },
        "subnetResourceGroupName": {
            "type": "string",
            "defaultValue": "SRH-NETWORKS",
            "metadata": {
                "description": "The Resource Group name of the subnet you want to use"
            }
        },
        "subnetVNETName": {
            "type": "string",
            "defaultValue": "SRH-VNET-UKSOUTH",
            "metadata": {
                "description": "The VNET name of the subnet you want to use"
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "SAP-1",
            "metadata": {
                "description": "The name of the subnet you want to use"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
            },
            "defaultValue": "https://raw.githubusercontent.com/simonhutson/SAP-Single-VM-Single-NIC-Dual-IP/sap1/"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "subscriptionType": {
            "Dev Test": {
                "subscriptionTypePrefix": "d",
                "tagEnvironment" :"SAP Dev Test"
            },
            "Pre-Production": {
                "subscriptionTypePrefix": "u",
                "tagEnvironment" :"SAP Pre-Production"
            },
            "Production": {
                "subscriptionTypePrefix": "p",
                "tagEnvironment" :"SAP Production"
            }
        },
        "location": {
            "uksouth": {
                "locationPrefix": "su"
            },
            "ukwest": {
                "locationPrefix": "wu"
            },
            "westeurope": {
                "locationPrefix": "we"
            },
            "northeurope": {
                "locationPrefix": "ne"
            }
        },
        "images": {
            "Windows Server 2012 Datacenter": {
                "sku": "2012-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows",
                "Plan": {},
                "UsePlan": false
            },
            "Windows Server 2012 R2 Datacenter": {
                "sku": "2012-R2-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows",
                "Plan": {},
                "UsePlan": false
            },
            "Windows Server 2016 Datacenter": {
                "sku": "2016-Datacenter",
                "offer": "WindowsServer",
                "publisher": "MicrosoftWindowsServer",
                "version": "latest",
                "OSType": "Windows",
                "Plan": {},
                "UsePlan": false
            },
            "SLES SAP 12-SP1": {
                "sku": "12-SP1",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "SLES SAP BYOS 12-SP1": {
                "sku": "12-SP1",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "SLES SAP 12-SP2": {
                "sku": "12-SP2",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "SLES SAP BYOS 12-SP2": {
                "sku": "12-SP2",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "SLES SAP 12-SP3": {
                "sku": "12-SP3",
                "offer": "SLES-SAP",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "SLES SAP BYOS 12-SP3": {
                "sku": "12-SP3",
                "offer": "SLES-SAP-BYOS",
                "publisher": "SUSE",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "RHEL 7.2": {
                "sku": "7.2",
                "offer": "RHEL",
                "publisher": "RedHat",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "RHEL 7.3": {
                "sku": "7.3",
                "offer": "RHEL",
                "publisher": "RedHat",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            },
            "Oracle Linux 7.2": {
                "sku": "7.2",
                "offer": "Oracle-Linux",
                "publisher": "Oracle",
                "version": "latest",
                "OSType": "Linux",
                "Plan": {},
                "UsePlan": false
            }
        },
        "internalOSType": "[variables('images')[parameters('osType')].OSType]",
        "csExtension": {
            "Windows": {
                "script": "[concat(parameters('_artifactsLocation'), '/shared/configureSAPVM.ps1', parameters('_artifactsLocationSasToken'))]",
                "scriptCall": "powershell.exe -ExecutionPolicy bypass -File .\\shared\\configureSAPVM.ps1"
            },
            "Linux": {
                "script": "[concat(parameters('_artifactsLocation'), '/shared/configureSAPVM.sh', parameters('_artifactsLocationSasToken'))]",
                "scriptCall": "sh configureSAPVM.sh"
            }
        },
        "vmSizes": {
            "ISU": {
                "size": "Standard_E4s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 1023
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "BGR & BGS BILLING (SAP)"
            },
            "CRM": {
                "size": "Standard_E4s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 511
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "BGR & BGS CRM (SAP)"
            },
            "PIC": {
                "size": "Standard_D4s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 255
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "SOA PI"
            },
            "BWA": {
                "size": "Standard_D4s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 255
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "BGR BILLING BUSINESS WAREHOUSE (SAP)"
            },
            "MOB": {
                "size": "Standard_E2s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 63
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "SAP BGSM MOBILE"
            },
            "EWM": {
                "size": "Standard_E2s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 127
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "EWM-CDC"
            },
            "JVA": {
                "size": "Standard_E2s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 63
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "SAP IPC"
            },
            "CEV": {
                "size": "Standard_E2s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 255
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "SOA CE"
            },
            "PIN": {
                "size": "Standard_E2s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 63
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "SOA PI"
            },
            "NGW": {
                "size": "Standard_E2s_v3",
                "disks": [
                    {
                        "size": 63
                    },
                    {
                        "size": 127
                    },
                    {
                        "size": 31
                    },
                    {
                        "size": 63
                    }
                ],
                "scriptArgs": " -DBDataLUNS '0,1' -DBLogLUNS '2'",
                "acceleratedNetworking": false,
                "tagServiceName": "SAP NETWEAVER GATEWAY"
            }
        },
        "locationPrefix": "[variables('location')[resourceGroup().location].locationPrefix]",
        "environmentPrefix": "[variables('subscriptionType')[parameters('subscriptionType')].subscriptionTypePrefix]",
        "prefix": "[concat('az', if(equals(variables('locationPrefix'), ''), 'xx', variables('locationPrefix')),'-',variables('environmentPrefix'),'vsap')]",
        "subnetId": "[concat('/subscriptions/',parameters('subnetSubscriptionId'), '/resourceGroups/', parameters('subnetResourceGroupName'), '/providers/Microsoft.Network/virtualNetworks/', parameters('subnetVNETName'), '/subnets/', parameters('subnetName'))]",
        "dataDiskSizes": "[variables('vmSizes')[parameters('sapSystemSize')].disks]",
        "acceleratedNetworking": "[variables('vmSizes')[parameters('sapSystemSize')].acceleratedNetworking]",
        "vmNumber": "[parameters('vmNumber')]",
        "vmName": "[concat(variables('prefix'),variables('vmNumber'))]",
        "nicName1": "[concat(variables('prefix'),variables('vmNumber'), '-nic1')]",
        "nestedDeploymentName": "nestedTemplate",
        "nestedDeploymentNameProf": "[concat(variables('nestedDeploymentName'), 'prof')]",
        "nestedDeploymentNameNIC1": "[concat(variables('nestedDeploymentName'), 'nic1')]",
        "osDiskType": "image",
        "tagCostCodeId": "[parameters('tagCostCodeId')]",
        "tagEnvironment": "[variables('subscriptionType')[parameters('subscriptionType')].tagEnvironment]",
        "tagServiceName": "[variables('vmSizes')[parameters('sapSystemSize')].tagServiceName]",
        "tagServiceOwner": "[parameters('tagServiceOwner')]",
        "tagServiceTicketRequestId": "[parameters('tagServiceTicketRequestId')]",
        "tagSource": "[parameters('tagSource')]",
        "tags": {
            "Cost Code ID": "[variables('tagCostCodeId')]",
            "Environment": "[variables('tagEnvironment')]",
            "Service Name": "[variables('tagServiceName')]",
            "Service Owner": "[variables('tagServiceOwner')]",
            "Service Ticket Request ID": "[variables('tagServiceTicketRequestId')]",
            "Source": "[variables('tagSource')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('nestedDeploymentNameNIC1')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/shared/nic-config.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "subnetId": {
                        "value": "[variables('subnetId')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('nestedDeploymentNameProf')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/shared/os-disk-parts-md.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "imageSku": {
                        "value": "[variables('images')[parameters('osType')].sku]"
                    },
                    "imagePublisher": {
                        "value": "[variables('images')[parameters('osType')].publisher]"
                    },
                    "imageOffer": {
                        "value": "[variables('images')[parameters('osType')].offer]"
                    },
                    "osDiskType": {
                        "value": "[variables('osDiskType')]"
                    },
                    "osType": {
                        "value": "[variables('internalOSType')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    },
                    "storageType": {
                        "value": "Premium_LRS"
                    },
                    "managedDiskId": {
                        "value": ""
                    }
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2017-10-01",
            "name": "[variables('nicName1')]",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tags')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('nestedDeploymentNameNIC1'))]",
            ],
            "properties": {
                "networkSecurityGroup": "[reference(variables('nestedDeploymentNameNIC1')).outputs.selectedConfiguration.value.networkSecurityGroup]",
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": "[reference(variables('nestedDeploymentNameNIC1')).outputs.selectedConfiguration.value.subnet]",
                            "primary": true
                        }
                    },
                    {
                        "name": "ipconfig2",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": "[reference(variables('nestedDeploymentNameNIC1')).outputs.selectedConfiguration.value.subnet]",
                            "primary": false
                        }
                    }
                ],
                "enableAcceleratedNetworking": "[variables('acceleratedNetworking')]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "[variables('nestedDeploymentName')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('nestedDeploymentNameProf'))]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName1'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/shared/server-md.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "imageReference": {
                        "value": "[reference(variables('nestedDeploymentNameProf')).outputs.imageReference.value]"
                    },
                    "osDisk": {
                        "value": "[reference(variables('nestedDeploymentNameProf')).outputs.osDisk.value]"
                    },
                    "osDiskType": {
                        "value": "[variables('osDiskType')]"
                    },
                    "vmName": {
                        "value": "[variables('vmName')]"
                    },
                    "vmSize": {
                        "value": "[variables('vmSizes')[parameters('sapSystemSize')].size]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "csExtensionScript": {
                        "value": "[variables('csExtension')[variables('internalOSType')].script]"
                    },
                    "csExtensionscriptCall": {
                        "value": "[variables('csExtension')[variables('internalOSType')].scriptCall]"
                    },
                    "csExtensionscriptArgs": {
                        "value": "[variables('vmSizes')[parameters('sapSystemSize')].scriptArgs]"
                    },
                    "avSetObj": {
                        "value": {}
                    },
                    "nicName1": {
                        "value": "[variables('nicName1')]"
                    },
                    "dataDisksObj": {
                        "value": {
                            "copy": [
                                {
                                    "name": "dataDisks",
                                    "count": "[length(variables('dataDiskSizes'))]",
                                    "input": {
                                        "lun": "[copyIndex('dataDisks')]",
                                        "createOption": "Empty",
                                        "name": "[concat(variables('vmName'),'-datadisk-',padLeft(copyIndex('dataDisks'),2,'0'))]",
                                        "diskSizeGB": "[variables('dataDiskSizes')[copyIndex('dataDisks')].size]"
                                    }
                                }
                            ]
                        }
                    },
                    "osType": {
                        "value": "[variables('internalOSType')]"
                    },
                    "tags": {
                        "value": "[variables('tags')]"
                    }
                }
            }
        }
    ]
}
