{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "imageReference": {
            "type": "object",
            "metadata": {
                "description": "imageReference object that should be used to create the virtual machine"
            }
        },
        "osDisk": {
            "type": "object",
            "metadata": {
                "description": "osDisk object that should be used to create the virtual machine"
            }
        },
        "osDiskType": {
            "type": "string",
            "allowedValues": [
                "image",
                "userImage",
                "osdisk"
            ],
            "metadata": {
                "description": "The type of OS disk."
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "Prefix of the virtual machine name."
            }
        },
        "vmSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the Virtual Machine."
            }
        },
        "vmDiagnosticsStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Storage Account to use for Virtual Machine Diagnostics."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "customScriptStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Storage Account containing the CustomScript."
            }
        },
        "customScriptStorageAccountContainerName": {
            "type": "string",
            "metadata": {
                "description": "Storage Account Container containing the CustomScript."
            }
        },
        "customScriptStorageAccountKey": {
            "type": "securestring",
            "metadata": {
                "description": "Storage Account Key containing the CustomScript."
            }
        },
        "avSetObj": {
            "type": "object",
            "metadata": {
                "description": "Availability set."
            }
        },
        "useAVSet": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Availability set."
            }
        },
        "nicName1": {
            "type": "string",
            "metadata": {
                "description": "Name of the network interface 1."
            }
        },
        "dataDisksObj": {
            "type": "object",
            "metadata": {
                "description": "Information about the data disks that the VM should have."
            }
        },
        "osType": {
            "type": "string",
            "metadata": {
                "description": "URL to github templates."
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags object."
            }
        }
    },
    "variables": {
        "availableAVSetObj": {
            "true": "[parameters('avSetObj')]",
            "false": null
        },
        "internalAVSetObj": "[variables('availableAVSetObj')[toLower(string(parameters('useAVSet')))]]",
        "customScriptExtension": {
            "Windows": {
                "Publisher": "Microsoft.Compute",
                "Name": "CustomScriptExtension",
                "Version": "1.7",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[concat('https://', parameters('customScriptStorageAccountName'), '.blob.core.windows.net/', parameters('customScriptStorageAccountContainerName'), '/noop.ps1')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "powershell.exe -ExecutionPolicy bypass -File \".\\noop.ps1\"",
                    "storageAccountName": "[parameters('customScriptStorageAccountName')]",
                    "storageAccountKey": "[parameters('customScriptStorageAccountKey')]"
                }
            },
            "Linux": {
                "Publisher": "Microsoft.Azure.Extensions",
                "Name": "CustomScript",
                "Version": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[concat('https://', parameters('customScriptStorageAccountName'), '.blob.core.windows.net/', parameters('customScriptStorageAccountContainerName'), '/noop.sh')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "sh noop.sh",
                    "storageAccountName": "[parameters('customScriptStorageAccountName')]",
                    "storageAccountKey": "[parameters('customScriptStorageAccountKey')]"
                }
            }
        },
        "customScriptExtensionName": "[variables('customScriptExtension')[parameters('osType')].Name]",
        "customScriptExtensionProperties": "[variables('customScriptExtension')[parameters('osType')]]",
        "hardwareProfile": {
            "vmSize": "[parameters('vmSize')]"
        },
        "networkProfile": {
            "networkInterfaces": [
                {
                    "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nicName1'))]",
                    "properties": {
                        "primary": true
                    }
                }
            ]
        },
        "diagnosticsProfile": {
            "bootDiagnostics": {
                "enabled": true,
                "storageUri": "[concat('http://', parameters('vmDiagnosticsStorageAccountName'), '.blob.core.windows.net')]"
            }
        },
        "availableProperties": {
            "image": {
                "availabilitySet": "[variables('internalAVSetObj')]",
                "hardwareProfile": "[variables('hardwareProfile')]",
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": "[parameters('imageReference')]",
                    "osDisk": "[parameters('osDisk')]",
                    "dataDisks": "[parameters('dataDisksObj').dataDisks]"
                },
                "networkProfile": "[variables('networkProfile')]",
                "diagnosticsProfile": "[variables('diagnosticsProfile')]"
            },
            "userImage": {
                "availabilitySet": "[variables('internalAVSetObj')]",
                "hardwareProfile": "[variables('hardwareProfile')]",
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": "[parameters('imageReference')]",
                    "osDisk": "[parameters('osDisk')]",
                    "dataDisks": "[parameters('dataDisksObj').dataDisks]"
                },
                "networkProfile": "[variables('networkProfile')]",
                "diagnosticsProfile": "[variables('diagnosticsProfile')]"
            },
            "osdisk": {
                "availabilitySet": "[variables('internalAVSetObj')]",
                "hardwareProfile": "[variables('hardwareProfile')]",
                "storageProfile": {
                    "osDisk": "[parameters('osDisk')]",
                    "dataDisks": "[parameters('dataDisksObj').dataDisks]"
                },
                "networkProfile": "[variables('networkProfile')]",
                "diagnosticsProfile": "[variables('diagnosticsProfile')]"
            }
        },
        "vmProperties": "[variables('availableProperties')[parameters('osDiskType')]]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "name": "[parameters('vmName')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "properties": "[variables('vmProperties')]"
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'), '/', variables('customScriptExtensionName'))]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
            ],
            "properties": "[variables('customScriptExtensionProperties')]"
        }
    ]
}
